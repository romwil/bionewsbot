# BioNewsBot Notification Service Configuration
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development
SERVICE_NAME=bionewsbot-notifications

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here

# Optional: OAuth for multi-workspace distribution
SLACK_CLIENT_ID=your-client-id-here
SLACK_CLIENT_SECRET=your-client-secret-here

# Channel Configuration
SLACK_HIGH_PRIORITY_CHANNEL=#alerts
SLACK_NORMAL_PRIORITY_CHANNEL=#updates

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bionewsbot
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_SSL_MODE=prefer

# API Configuration
API_BASE_URL=http://localhost:8000
API_KEY=your-api-key-here
API_TIMEOUT=30
WEBHOOK_SECRET=your-webhook-secret-here

# Notification Settings
NOTIFICATION_POLL_INTERVAL=60
NOTIFICATION_BATCH_SIZE=10
NOTIFICATION_MAX_RETRIES=3
NOTIFICATION_RETRY_DELAY=5
NOTIFICATION_LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_HIGH_PRIORITY_TOKENS=10
RATE_LIMIT_HIGH_PRIORITY_REFILL_RATE=1
RATE_LIMIT_NORMAL_PRIORITY_TOKENS=5
RATE_LIMIT_NORMAL_PRIORITY_REFILL_RATE=0.5

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Security
ALLOWED_ORIGINS=*
CORS_ENABLED=true
