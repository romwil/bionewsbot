# BioNewsBot Scheduler Service Environment Configuration

# Environment
ENVIRONMENT=development
LOG_LEVEL=info

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_SCHEDULER_DB=1
REDIS_CELERY_DB=2

# Backend API Configuration
API_BASE_URL=http://localhost:8000
API_TIMEOUT=30
API_KEY=your-api-key-here

# Database (for direct access if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/bionewsbot

# Scheduling Configuration
DAILY_ANALYSIS_HOUR=6
WEEKLY_REPORT_DAY=mon
WEEKLY_REPORT_HOUR=8

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_SOFT_TIME_LIMIT=3300
CELERY_TASK_TIME_LIMIT=3600

# Monitoring Configuration
PROMETHEUS_PORT=9090
HEALTH_CHECK_PORT=8001
METRICS_ENABLED=true

# Archive Storage
ARCHIVE_LOCATION=/var/bionewsbot/archive
ARCHIVE_RETENTION_DAYS=365

# Company Configuration
PRIORITY_COMPANIES=GILD,MRNA,PFE,JNJ,ABBV,BMY,AMGN,BIIB
MAX_CONCURRENT_ANALYSIS=5

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
NOTIFICATION_EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_RECIPIENTS=team@example.com,alerts@example.com

# Feature Flags
ENABLE_HOURLY_SCAN=true
ENABLE_WEEKLY_REPORT=true
ENABLE_AUTO_CLEANUP=true
ENABLE_DB_OPTIMIZATION=true

# Performance Tuning
ANALYSIS_BATCH_SIZE=10
REPORT_GENERATION_TIMEOUT=600
MAX_RETRIES=3
RETRY_DELAY=60

# Security
ENCRYPT_ARCHIVES=false
ARCHIVE_ENCRYPTION_KEY=
