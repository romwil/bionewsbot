# BioNewsBot Backend Configuration Example
# Copy this file to .env and update with your values

# Application Settings
PROJECT_NAME="BioNewsBot"
VERSION="1.0.0"
DEBUG=False
LOG_LEVEL="INFO"

# API Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://yourdomain.com"]
API_V1_STR="/api/v1"

# Security
SECRET_KEY="your-secret-key-here-generate-with-openssl-rand-hex-32"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL="postgresql://bionewsbot:password@localhost:5432/bionewsbot"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis (optional, for caching)
REDIS_URL="redis://localhost:6379/0"

# OpenAI Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4"
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_TIMEOUT=60

# First Superuser (created on startup)
FIRST_SUPERUSER_EMAIL="admin@bionewsbot.com"
FIRST_SUPERUSER_PASSWORD="changeme-use-strong-password"
FIRST_SUPERUSER_FULL_NAME="System Administrator"

# Email Configuration (optional)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST="smtp.gmail.com"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAILS_FROM_EMAIL="noreply@bionewsbot.com"
EMAILS_FROM_NAME="BioNewsBot"

# Analysis Settings
ANALYSIS_SCHEDULE_ENABLED=True
ANALYSIS_DEFAULT_SCHEDULE="0 6 * * *"  # Daily at 6 AM
MAX_CONCURRENT_ANALYSES=5
ANALYSIS_TIMEOUT_MINUTES=30

# Data Source Settings
RSS_FEED_TIMEOUT=30
WEB_SCRAPING_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=5

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Feature Flags
ENABLE_WEBSOCKETS=True
ENABLE_BACKGROUND_TASKS=True
ENABLE_CACHE=True

# External APIs (optional)
NEWS_API_KEY="your-news-api-key"
FINANCIAL_API_KEY="your-financial-api-key"
